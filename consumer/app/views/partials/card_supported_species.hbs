<div class="card">
  <div class="card-body pt-2">
    <header class="card-header bg-transparent mb-2 pt-0">
      <h3 class="card-title mb-0">Supported Species</h3>
    </header>
    <dl class="card-text list-group list-group-flush">
    {{#each supports}}
      <div class="list-group-item">
        <article class="card border-0">
          <dt><h4>{{common_name}}</h4></dt>
          <dd><a href={{wikilink}}>{{species}}</a></dd>
          {{#if wikiSummary}}
          {{#if wikiSummary.err}}
          {{{wikiSummary.err}}}
          {{/if}}
          <dd class="">
            <img class="img-fluid card-img w-75 rounded-0 mb-2" src="{{wikiSummary.originalimage.source}}" {{> wiki_img_details}}>
            <blockquote class="card-text" cite="{{wikilink}}">
              {{{wikiSummary.extract_html}}}
            </blockquote>
          </dd>
          {{/if}}
        </article>
      </div>
    {{/each}}
    </dl>
  </div>
</div>{{! End of supported species card for the pollintor.}}
